{
	"name": "monorepo-template",
	"devDependencies": {
		"@biomejs/biome": "2.3.11",
		"turbo": "^2.7.4",
		"typescript": "5.9.2"
	},
	"engines": {
		"node": ">=18"
	},
	"packageManager": "bun@1.3.6",
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"format-and-lint": "biome check .",
		"format-and-lint:fix": "biome check . --write",
		"check-types": "turbo run check-types"
	},
	"workspaces": [
		"apps/*",
		"packages/*"
	]
}
